{
  "name": "the-magic-frog",
  "version": "2.0.0",
  "description": "Help the magic frog to remember all his interesting and fun stories!",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "deploy": "push-dir --dir=dist --branch=gh-pages",
    "lint": "eslint --ext \".js,.vue\" --ignore-path .gitignore .",
    "build-actions": "npm run build-top-reply-action && npm run build-tweet-action",
    "build-top-reply-action": "ncc build .github/actions/top-reply/index.js -o .github/actions/top-reply/dist",
    "build-tweet-action": "ncc build .github/actions/tweet/index.js -o .github/actions/tweet/dist",
    "test": "jest"
  },
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@nuxt/content": "^1.14.0",
    "@nuxtjs/axios": "^5.13.1",
    "@nuxtjs/pwa": "^3.3.5",
    "bootstrap": "^5.0.2",
    "core-js": "^3.15.2",
    "jest": "^27.0.6",
    "nuxt": "^2.15.3",
    "twitter-lite": "^1.1.0",
    "web3": "^1.4.0"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^6.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@vercel/ncc": "^0.28.6",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.22.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-vue": "^7.12.1",
    "fibers": "^5.0.0",
    "push-dir": "^0.4.1",
    "sass": "^1.35.1",
    "sass-loader": "^10.2.0"
  },
  "crypto": {
